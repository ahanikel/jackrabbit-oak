#!/usr/bin/env bash

thePid=$(ps auxww|grep java|grep quickstart|awk '{print $2}')

if [[ -n $thePid ]]
then
    kill -9 $thePid
fi

while kill -0 $thePid
do
    sleep 1
done 2>/dev/null

#rm -rf /tmp/blobs

#export initJournal=56c15a45-bdbc-9afa-f0b3-1d707b8a15ef

